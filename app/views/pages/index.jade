extends ../layout

block content
  .container
    .row
      each item in movies
        .col-md-2
          .thumbnail
            a(href="/movie/#{item._id}")
              img.img-thumbnail(src="#{item.poster}", alt="#{item.title}")
              .caption
                h5 #{item.title}
                p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告电影